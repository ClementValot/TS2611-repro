{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "./types",
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./lib",
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "target": "ESNext",
    "lib": ["ES2023", "DOM"]
  }
}
